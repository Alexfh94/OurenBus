<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos para pasos de navegación -->
    <style name="TextAppearance.App.StepActive" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TextAppearance.App.StepInactive" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <!-- Tema base de la aplicación -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Atributos del tema -->
    </style>

    <!-- Tema para la pantalla de carga -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/ourenbus_turquoise</item>
        <item name="android:navigationBarColor">@color/ourenbus_turquoise</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources> 